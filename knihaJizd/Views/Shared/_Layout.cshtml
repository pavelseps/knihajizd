        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        
    </div>
    <hr />
    <div class="container">
        <footer>
            <p class="text-right">E-Mail: <a href="mailto:papaja54@gmail.com">papaja54@gmail.com</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
