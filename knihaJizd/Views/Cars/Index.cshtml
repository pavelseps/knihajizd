@model IEnumerable<knihaJizd.Models.Cars>

@{
    ViewBag.Title = "Automobily";
}

<h1>@ViewBag.Title</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Photo) automobilu
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name) automobilu
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SPZ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Photo)" alt="">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SPZ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td class="text-right">
            @Html.ActionLink("Vyber", "../Drives/Create", new { id = item.Id }, new { @class="btn btn-success btn-xs" })
        </td>
    </tr>
}

</table>
