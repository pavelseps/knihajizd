@model IEnumerable<knihaJizd.Models.Accidents>

@{
    ViewBag.Title = "Nehody";
}

<h1>@ViewBag.Title</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Drives.Cars.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drives.Cars.SPZ)
        </th>
        <th>
            Jmeno uživatele
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccidentAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Drives.Cars.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drives.Cars.SPZ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drives.AspNetUsers.Name) @Html.DisplayFor(modelItem => item.Drives.AspNetUsers.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccidentAddress)
        </td>
        <td>
            @Html.ActionLink("Detail", "AccidentsDetails", new { id=item.Id }, new { @class="btn btn-primary btn-xs" })
        </td>
    </tr>
}

</table>
